{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "locale": "zh-TW",
    "pretty": true,
    "rootDir": ".",
    "traceResolution": true,
    "newLine": "lf"
  },
  "exclude": [
    "node_modules"
  ]
}
